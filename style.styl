ol, li
  padding 0
  margin 0

.loading
  box-sizing border-box
  height 100vh
  display flex
  justify-content center
  align-items center
  &::before,
  &::after
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    content ''
    width 0
    height 0
    background rgba(0,0,0,.5)
    animation loading 1.5s linear infinite
    border-radius 50%
  &::after
    animation-delay 2s

@keyframes loading
  0%
    width 0
    height 0
    opacity 1
  100%
    width 40px
    height 40px
    opacity 0

nav > ul > li
  position relative
  display inline-block
  height 32px
  a
    color inherit
    text-decoration none
  &::after,
  &.active::after
    position absolute
    content: ''
    height 2px
    width 0
    left 0
    bottom 0
    background orange
  &.active::after
    width 100%
    transition all .5s
  &.active ol
    display block
    animation submenuSlide .3s
  ol
    display none
    position absolute
    top 32px
    right 0
    white-space nowrap
    border 1px solid #dddddd
    background #ffffff

@keyframes submenuSlide{
  0%{
    margin-right: 100%;
  }
  100%{
    margin-right: 0%;
  }
}